{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es2015", "es2016" ],
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": [ "node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
